<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.aryandadhich.urja10.ui.houseCaptain.HouseCaptainEditViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.houseCaptain.HouseCaptainEditFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frag_edit_house_captain_name_input_layout"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_marginTop="75dp"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frag_edit_house_captain_name_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@{viewModel.name}"
                android:textColor="@color/blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frag_edit_house_captain_college_id_input_layout"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:hint="College mail address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_name_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frag_edit_house_captain_college_id_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@{viewModel.collegeId}"
                android:textColor="@color/blue" />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frag_edit_house_captain_year_input_layout"
            android:layout_width="100dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:hint="Year"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_college_id_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frag_edit_house_captain_year_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@{@string/house_captain_edit_frag_int(viewModel.year)}"
                android:textColor="@color/blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frag_edit_house_captain_branch_input_layout"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:hint="Branch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_edit_house_captain_year_input_layout"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_college_id_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frag_edit_house_captain_branch_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@{viewModel.branch}"
                android:textColor="@color/blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/frag_edit_house_captain_whatsapp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_year_input_layout"
            android:layout_margin="16dp"
            android:textAlignment="center"
            android:text="Whatsapp Country Code (without +) and Mobile Number"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frag_edit_house_captain_whatsapp_country_code_input_layout"
            android:layout_width="75dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:hint="Country Code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_whatsapp_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frag_edit_house_captain_whatsapp_country_code_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@{@string/house_captain_edit_frag_int(viewModel.whatsappCountryCode)}"
                android:textColor="@color/blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frag_edit_house_captain_whatsapp_number_input_layout"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:hint="Number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_edit_house_captain_whatsapp_country_code_input_layout"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_whatsapp_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frag_edit_house_captain_whatsapp_number_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@{viewModel.whatsappNumber}"
                android:textColor="@color/blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/frag_edit_house_captain_mobile_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_whatsapp_country_code_input_layout"
            android:layout_margin="16dp"
            android:textAlignment="center"
            android:text="Mobile Number Country Code (without +) and Number"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frag_edit_house_captain_mobile_number_country_code_input_layout"
            android:layout_width="75dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:hint="Country Code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_mobile_number_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frag_edit_house_captain_mobile_number_country_code_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@{@string/house_captain_edit_frag_int(viewModel.mobileNumberCountryCode)}"
                android:textColor="@color/blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frag_edit_house_captain_mobile_number_input_layout"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:hint="Number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_edit_house_captain_mobile_number_country_code_input_layout"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_mobile_number_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frag_edit_house_captain_mobile_number_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@{viewModel.mobileNumber}"
                android:textColor="@color/blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/frag_edit_house_captain_login_id_input_layout"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:hint="Login Id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_mobile_number_country_code_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frag_edit_house_captain_login_id_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:editable="false"
                android:text="@{viewModel.loginId}"
                android:textColor="@color/blue" />

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/frag_edit_house_captain_update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="125dp"
            android:text="update"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_edit_house_captain_login_id_input_layout" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deleteFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:src="@drawable/delete_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>